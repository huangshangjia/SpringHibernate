<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.manage.pub.vo"><!-- 这里的package记得要写对啊。要不然运行也会出错的 -->
    <class name="Staff" table="staff"><!-- 如果表名跟类名一个样的话，那么table属性可以不写 -->
        <id name="staffId"></id>
        <property name="staffCode"></property>
        <property name="staffName"></property>
        <property name="staffPwd"></property>
        <property name="departmentId"></property>
    </class>
</hibernate-mapping>